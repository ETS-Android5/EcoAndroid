<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>Refactor4Green</name>
  <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description>
    Plugin used to modify the source code of Android mobile applications in order for them to be more energy efficient.
    This changes are according to well-known energy patterns.
    THIS TEXT IS TO KNOW IF THIS IS THE NEW PLUGIN OR NOT.
  </description>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products
  <depends>com.intellij.modules.platform</depends> -->

  <extensions defaultExtensionNs="com.intellij">
    <localInspection
            language="JAVA"
            displayName="Refactor4Green: Dynamic Retry Delay - Constant Wait Time to Dynamic Wait Time'"
            groupPath="Java"
            groupBundle="messages.InspectionsBundle"
            groupKey="group.names.probable.bugs"
            enabledByDefault="true"
            level="WARNING"
            implementationClass="DynamicRetryDelay.DynamicWaitTime.DynamicWaitTimeInspection"/>
    <localInspection
            language="JAVA"
            displayName="Refactor4Green: Dynamic Retry Delay - Check Network Connection Before Autorefresh'"
            groupPath="Java"
            groupBundle="messages.InspectionsBundle"
            groupKey="group.names.probable.bugs"
            enabledByDefault="true"
            level="WARNING"
            implementationClass="DynamicRetryDelay.CheckNetwork.CheckNetworkInspection"/>
  </extensions>

  <actions>
    <action id="Refactor4Green" class="Refactor4GreenAction" text="Refactor4Green"
            description="Refactor4Green">
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>